@model BookShop.Models.AccountViewModel.UserViewModel

@{
    ViewBag.Title = "Edit User";
}

<div class="bookShop-form-container fade-in">
    <div class="custom-form-width">
        <form class="form" asp-action="EditUser" asp-controller="Admin" method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly />
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="AddressLine" value="@Model.AddressLine" />
            </div>
            <div class="form-group">
                <label asp-for="Role">Role</label>
                <input type="text" class="form-control" id="Role" name="Role" value="@Model.Role" readonly />
            </div>
            <div class="form-group btnTop">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

