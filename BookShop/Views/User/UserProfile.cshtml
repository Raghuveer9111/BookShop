@model BookShop.Models.UserViewModel.UserProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="bookShop-form-container fade-in">
    <div class="custom-form-width">
        <form method="post" class="form" asp-controller="User" asp-action="EditProfile">
            <div>
                <h2>User Profile</h2>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="UserName">User Name</label>
                <input type="text" asp-for="UserName" class="form-control" name="UserName" value="@Model.UserName" />
            </div>
            <div class="form-group">
                <label asp-for="Email">User Email</label>
                <input type="text" asp-for="Email" class="form-control" name="Email" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label asp-for="AddressLine">Address</label>
                <input type="text" asp-for="AddressLine" class="form-control" name="AddressLine" value="@Model.AddressLine" />
            </div>
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password</label>
                <input type="password" asp-for="CurrentPassword" class="form-control" name="CurrentPassword" value="@Model.CurrentPassword" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input type="password" asp-for="NewPassword" class="form-control" name="NewPassword" value="@Model.NewPassword" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword">ConfirmNewPassword</label>
                <input type="password" asp-for="ConfirmNewPassword" class="form-control" name="ConfirmNewPassword" value="@Model.ConfirmNewPassword" />
            </div>
            <div class="form-group btnTop">
                <a asp-action="Index" asp-controller="User" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>


